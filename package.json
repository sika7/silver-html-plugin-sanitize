{
  "name": "@sika7/silver-html-plugin-sanitize",
  "version": "1.0.0",
  "description": "silver-html plugin for sanitize.",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage",
    "build": "tsc",
    "start:dev": "tsc && node ./dist/index.js",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "html-sanitize",
    "silver-html-plugin",
    "silver-html"
  ],
  "author": "sika7 <91676209+sika7@users.noreply.github.com>",
  "repository": "https://github.com/sika7/silver-html-plugin-sanitize",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended"
    ],
    "rules": {
      "jest/expect-expect": "off"
    }
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 80,
        "branches": 70,
        "functions": 80,
        "lines": 80
      }
    },
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  },
  "dependencies": {
    "@sika7/postcss-whitelist-sanitize": "^1.0.0",
    "postcss": "^8.4.4",
    "typescript": "^4.5.2"
  },
  "devDependencies": {
    "@sika7/silver-html": "^1.0.1",
    "@types/jest": "^27.0.3",
    "@types/parse5": "^6.0.3",
    "eslint": "^8.4.1",
    "eslint-plugin-jest": "^25.3.0",
    "jest": "^27.4.3",
    "ts-jest": "^27.1.0"
  }
}
